<% include partials/header.ejs%>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
             <h1 class="text-center">please sign up!</h1>
            <form action="/register" method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-4 control-label">username: </label>
                    <div class="col-sm-8">
                        <input type="text" name="username" placeholder="username" class="form-control"></input>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">password: </label>
                    <div class="col-sm-8">
                        <input type="password" name="password" placeholder="pwd" class="form-control"></input>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button class="btn btn-default">SignUp!</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

