<% include ../partials/header.ejs%>

<div class="container">
    <div class="row">
        <!--create the sidebar-->
        <div class="col-md-3">
            <p class="lead">Camp</p>
            <!--list item-->
            <div class="list-group">
                <li class="list-group-item active">item1</li>
                <li class="list-group-item">item2</li>
                <li class="list-group-item">item3</li>
            </div>
        </div>
        <div class="col-md-9">
            <!--camp information -->
            <div class="thumbnail">
                <img class="img-responsive" src="<%=camp.image %>" alt="could not load image"></img>
                <div class="caption">
                    <h4 class="pull-right"><%=camp.price %>/night</h4>
                    <h4><a href="#"><%=camp.name %></a></h4>
                    <p><%=camp.desc %></p>
                    <p>
                        <em>Submitted by: <%=camp.author.username%></em>
                    </p>
                    <!--how i can check the authorization here......-->
                    <% if(campUser && camp.author.id.equals(campUser._id)) { %>
                        <a class="btn btn-warning" href="/camps/<%=camp._id %>/edit">Edit </a>
                        <form id="form-delete" action="/camps/<%=camp._id%>?_method=delete" method="post">
                            <button class="btn btn-danger">delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <!--comment information-->
            <div class="well">
                <div class="text-right"><a class="btn btn-success" href="/camps/<%=camp._id %>/comments/new">Add new comment </a></div>
                <hr>
                <!--every comment takes a row-->
                <% camp.comments.forEach(function(comment){ %>
                    <div class="row">
                        <strong> <%=comment.author.username%> </strong> <span class="pull-right">10 days age</span>
                        <p><%=comment.text%></p>
                        <!--check if currentUser is the creator for this comment!!!-->
                        <% if(campUser && comment.author.id.equals(campUser._id)) { %>
                            <a class="btn btn-warning" href="/camps/<%=camp._id %>/comments/<%=comment._id%>/edit">Edit </a>
                            <form id="form-delete" action="/camps/<%=camp._id%>/comments/<%=comment._id%>?_method=delete" method="post">
                                <button class="btn btn-danger">delete</button>
                            </form>
                        <% } %>
                    </div>
                <% })%>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs%>