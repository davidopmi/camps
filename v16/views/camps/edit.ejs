<% include ../partials/header.ejs%>
<div class="container">
    <div style="width:30%;margin:0 auto; ">
        <h1>welcome to edit.ejs</h1>
        <form action="/camps/<%=camp._id%>?_method=put" method="post" style="margin:30px auto;">
            <div class="form-group">
                <input type="text" class="form-control" value="<%=camp.name%>" name="camp[name]">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" value="<%=camp.image%>" name="camp[image]">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" value="<%=camp.desc%>" name="camp[desc]">
            </div>
            <div class="form-group">
                <input type="number" min="0.01" step="0.01" class="form-control" value="<%=camp.price%>" name="camp[price]">
            </div>
            <div class="form-group">
                 <button type="submit" class="btn btn-success btn-block">Submit</button>
            </div>       
        </form>
        <a href="/camps">go back to camps!!!</a>
    </div>
</div>


