<% include ../partials/header.ejs%>
<div class="container">
    <div style="width:30%;margin:0 auto; ">
        <h1>new comment for <%=camp.name %> </h1>
        <form action="/camps/<%=camp._id %>/comments" method="post" style="margin:30px auto;">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="text" name="comment[text]">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="author" name="comment[author]">
            </div>
            <div class="form-group">
                 <button type="submit" class="btn btn-success btn-block">Submit</button>
            </div>       
        </form>
        <a href="/camps">go back to camps!!!</a>
    </div>
</div>


